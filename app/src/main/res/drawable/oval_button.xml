<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#0A1455" />
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#0A1455" />
            <gradient android:angle="-90" android:startColor="#0A1455" android:endColor="#1A9DDA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#0A1455" />
            <solid android:color="#1A9DDA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dip" android:color="#1A9DDA" />
            <gradient android:angle="-90" android:startColor="#1A9DDA" android:endColor="#39448C" />
        </shape>
    </item>
</ripple>